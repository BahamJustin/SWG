WindowManager:
    # LoadWindow:
    MainMenu:
    NewGameMenu:
    DevTestMenu:
    CharacterMenu:
    RelationshipMenu:
    ActionMenu:
    PlanetMenu:

<LoadWindow>:
    name: "load"

<MainMenu>:
    name: "main"
    on_pre_enter: root.on_pre_enter(self)
    BoxLayout:
        orientation: "vertical"
        Label:
            id: dateLabel
            text: root.gameDate
            size_hint: 1, .25
        StackLayout:
            orientation: "lr-tb"
            padding: ("20dp", "20dp")
            spacing: ("20dp", "10dp")
            size_hint: (1, 1)
            Button:
                text: "Character Menu"
                size_hint: 1, None
                on_release: 
                    app.root.current = "CharacterOptions"
                    root.manager.transition.direction = "left"
            Button:
                text: "Relationships Menu"
                size_hint: 1, None
                on_release: 
                    app.root.current = "RelationOptions"
                    root.manager.transition.direction = "left"
            Button:
                text: "Action Menu"
                size_hint: 1, None
                on_release: 
                    app.root.current = "ActionOptions"
                    root.manager.transition.direction = "left"
            Button:
                text: "Planet Menu"
                size_hint: 1, None
                on_release: 
                    app.root.current = "PlanetOptions"
                    root.manager.transition.direction = "left"
            Button:
                text: "Dev Menu"
                size_hint: 1, None
                on_release: 
                    app.root.current = "DevOptions"
                    root.manager.transition.direction = "left"
            Button:
                text: "New Game"
                size_hint: 1, None
                on_release: 
                    app.root.current = "newGame"
                    root.manager.transition.direction = "left"
            Button:
                text: "Exit Game"
                size_hint: 1, None
                on_release: app.stop()

<NewGameMenu>:
    name: "newGame"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Are you sure you want to start a new game?"
            size_hint: 1, .25
        StackLayout:
            orientation: "lr-tb"
            padding: ("20dp", "20dp")
            spacing: ("20dp", "10dp")
            size_hint: (1, 1)
            Button:
                text: "Yes"
                size_hint: 1, None
                on_release: 
                    root.startNewGame()
                    app.root.current = "main"
                    root.manager.transition.direction = "right"
            Button:
                text: "No"
                size_hint: 1, None
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

